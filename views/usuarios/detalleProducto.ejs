<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>P谩gina de Bienvenida</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <!-- Incluir la navegaci贸n -->
    <%- include ../partials/navbar.ejs %>
        <%- include ../partials/alertas.ejs %>

            <div class="container mt-5">
                <div class="row">
                    <!-- Secci贸n lateral de productos destacados -->
                    <div class="col-md-3">
                        <h5 class="mb-3 text-center">Otros productos destacados</h5>
                        <ul class="list-group list-group-flush">
                            <% destacados.forEach(destacado=> { %>
                                <li class="list-group-item d-flex align-items-center gap-3 tarjeta-horizontal">
                                    <a href="/usuarios/producto/<%= destacado.id_producto %>"
                                        class="d-flex align-items-center text-decoration-none w-100">
                                        <img src="<%= destacado.imagen_url %>" alt="<%= destacado.nombre_producto %>"
                                            class="img-miniatura">
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="mb-0 nombre-destacado">
                                                <%= destacado.nombre_producto %>
                                            </h6>
                                        </div>
                                    </a>
                                </li>
                                <% }) %>
                        </ul>
                    </div>

                    <!-- Detalles del producto -->
                    <div class="col-md-9">
                        <div class="row">
                            <!-- Carrusel de im谩genes del producto -->
                            <div class="col-md-6">
                                <div class="swiper mySwiper border rounded p-3 bg-light shadow-sm">
                                    <div class="swiper-wrapper">
                                        <% imagenes.forEach(img=> { %>
                                            <div class="swiper-slide">
                                                <img src="<%= img.url_imagen %>" class="img-fluid rounded"
                                                    alt="Vista del producto">
                                            </div>
                                            <% }) %>
                                    </div>
                                    <!-- Flechas -->
                                    <div class="swiper-button-next"></div>
                                    <div class="swiper-button-prev"></div>
                                    <!-- Paginaci贸n -->
                                    <div class="swiper-pagination"></div>
                                </div>
                                <div class="mt-3 d-flex flex-wrap gap-2 justify-content-center">
                                    <% imagenes.forEach((img, index)=> { %>
                                        <div class="border rounded p-1 miniatura" data-index="<%= index %>"
                                            style="width: 80px; height: 80px; overflow: hidden; cursor: pointer;">
                                            <img src="<%= img.url_imagen %>" alt="Miniatura"
                                                class="img-fluid h-100 w-100 object-fit-cover">
                                        </div>
                                        <% }) %>
                                </div>

                            </div>


                            <!-- Informaci贸n -->
                            <div class="col-md-6">
                                <h2 class="fw-bold text-primary">
                                    <%= producto.nombre_producto %>
                                </h2>
                                <h3 class="text-success">$<%= producto.precio %> MXN</h3>
                                <p><strong>Disponibles:</strong>
                                    <%= producto.cantidad %> unidades
                                </p>
                                <p class="mt-3" style="white-space: pre-line;"><strong>Descripci贸n</strong><br> <%=
                                        producto.descripcion.trimStart() %>
                                </p>

                                <% if (!user || user.rol !=='administrador' ) { %>
                                    <!-- Formulario solo para clientes -->
                                    <form id="formAgregarCarrito" class="mt-4">
                                        <input type="hidden" name="idProducto" value="<%= producto.id_producto %>">
                                        <input type="hidden" name="nombre" value="<%= producto.nombre_producto %>">
                                        <input type="hidden" name="precio" value="<%= producto.precio %>">
                                        <input type="hidden" name="imagen_url" value="<%= producto.imagen_url %>">

                                        <div class="form-group mb-3">
                                            <label for="cantidad">Cantidad:</label>
                                            <input type="number" name="cantidad" id="cantidad" class="form-control w-50"
                                                min="1" max="<%= producto.cantidad %>" value="1" required>
                                        </div>

                                        <button type="button" class="agregar-carrito btn btn-warning"
                                            data-id="<%= producto.id_producto %>"
                                            data-nombre="<%= producto.nombre_producto %>"
                                            data-precio="<%= producto.precio %>"
                                            data-imagen="<%= producto.imagen_url %>">
                                             Agregar al carrito
                                        </button>
                                    </form>

                                    <!-- Extras solo para clientes -->
                                    <div class="mt-4">
                                        <p><i class="bi bi-truck"></i> Env铆os a Ray贸n, Pueblo Nuevo, Pantepec, Tapilula
                                        </p>
                                        <p><i class="bi bi-arrow-repeat"></i> Devoluciones gratis dentro de 3 d铆as</p>
                                        <p><i class="bi bi-star-fill text-warning"></i> Producto destacado por calidad
                                            artesanal</p>
                                    </div>
                                    <% } %>
                            </div>
                        </div>
                    </div>

                    <!-- Productos relacionados -->
                    <div class="container mt-5">
                        <h4 class="mb-4 text-center">Productos Relacionados</h4>
                        <div class="row">
                            <% relacionados.forEach(rel=> { %>
                                <div class="col-md-4 mb-4">
                                    <div class="card tarjeta-relacionada shadow-sm h-100">
                                        <a href="/usuarios/producto/<%= rel.id_producto %>">
                                            <img src="<%= rel.imagen_url %>" class="card-img-top img-fluid"
                                                alt="<%= rel.nombre_producto %>">
                                        </a>
                                        <div class="card-body">
                                            <h6 class="card-title text-center nombre-relacionado">
                                                <a href="/usuarios/producto/<%= rel.id_producto %>"
                                                    class="text-decoration-none text-dark">
                                                    <%= rel.nombre_producto %>
                                                </a>
                                            </h6>
                                            <p class="text-muted text-center mb-1">Categor铆a: <%= rel.nombre_categoria
                                                    %>
                                            </p>
                                            <p class="text-success text-center"><strong>$<%= rel.precio %></strong></p>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Incluir el footer -->
            <%- include ../partials/footer.ejs %>

                <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
                <script src="/js/carrito.js"></script>
                <script src="/js/notificaciones.js"></script>
</body>

</html>
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restablecer Contrase침a</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body class="bg-light">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white text-center">
                        <h1>Restablecer Contrase침a</h1>
                    </div>
                    <div class="card-body">
                        <% if (typeof message !=='undefined' && message) { %>
                            <div id="notification" class="alert alert-danger text-center" role="alert">
                                <%= message %>
                            </div>
                            <script>
                                setTimeout(() => {
                                    const notification = document.getElementById('notification');
                                    if (notification) notification.style.display = 'none';
                                }, 3000);
                            </script>
                            <% } %>

                                <% if (typeof successMessage !=='undefined' && successMessage) { %>
                                    <div id="success" class="alert alert-success text-center" role="alert">
                                        <%= successMessage %>
                                    </div>
                                    <script>
                                        setTimeout(() => {
                                            window.location.href = "/usuarios/login"; // 游녤 redirige al login
                                        }, 2000);
                                    </script>
                                    <% } %>

                                        <form action="/usuarios/reset-password" method="POST">
                                            <input type="hidden" name="token" value="<%= token %>">
                                            <div class="mb-3">
                                                <label for="newPassword" class="form-label">Nueva contrase침a:</label>
                                                <input type="password" id="newPassword" name="newPassword"
                                                    class="form-control" required>
                                            </div>
                                            <div class="d-grid">
                                                <button type="submit" class="btn btn-primary">Actualizar
                                                    Contrase침a</button>
                                            </div>
                                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>